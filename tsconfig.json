{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/*"],
      "@utils": ["src/utils"]
    }
    // "paths": {
    //   "@components": ["src/components"],
    //   "@static": ["static"],
    //   "@utils": ["src/utils"],
    //   "@resources": ["src/resources"],
    //   "@hooks": ["src/hooks"],
    //   "@styles": ["src/styles"]
    // }
  },
  "exclude": ["node_modules", "public", ".cache"],
  "include": ["./src/**/*"]
}
